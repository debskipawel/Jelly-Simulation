<Application x:Class="SpringSimulationGUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SpringSimulationGUI"
             StartupUri="MainWindow.xaml"
             SessionEnding="App_OnShutdown"
             Exit="App_OnExit">
    <Application.Resources>
        <Style x:Key="SquareButton" TargetType="{x:Type Button}">
            <Setter Property="Width" Value="40"></Setter>
            <Setter Property="Height" Value="40"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Background" Value="White"></Setter>
        </Style>
        <ControlTemplate x:Key="SquareButtonWithImage" TargetType="Button">
        </ControlTemplate>
    </Application.Resources>
</Application>
